<wxs src="../../wxs/price.wxs" module="p"></wxs>
<view class="container">
    <image style="width:{{w}}rpx;height:{{h}}rpx;" bind:load="onImgLoad" src="{{data.img}}"></image>
    <view data-pid="{{data.id}}" bind:tap="onItemTap" class="content-contanier">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}" wx:key="{{index}}">
                <l-tag size="super-mini" l-class="l-tag">{{item}}</l-tag>
            </block>
        </view>
        <view class="price-row">
            <l-price color="#157658" value-size="28" unit-size="20" autofix value="{{p.mainPrice(data.price,data.discount_price)}}"></l-price>
            <l-price l-class="discount-price" color="#999999" size="26" wx:if="{{data.discount_price}}" deleted value="{{p.slashedPrice(data.price,data.discount_price)}}"></l-price>
        </view>

        <text class="subtitle">{{data.subtitle}}</text>
    </view>
</view>
