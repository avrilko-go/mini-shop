<view class="container">
    <l-grid row-num="3" l-class="inner-container">
        <block wx:for="{{grid}}">
            <l-grid-item slot="{{index}}" key="{{index}}">
                <view class="grid-item">
                    <image class="img" src="{{item.img}}"></image>
                    <text class="text">{{item.title}}</text>
                </view>
            </l-grid-item>
        </block>
    </l-grid>
</view>
